<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle_back"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/text_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLength="1"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="abc"/>

            <TextView
                android:id="@+id/text_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_username"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="online"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay1"
        android:layout_above="@+id/lay_entermsg"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/text_nodatafound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data Found"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/lay_entermsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDBCBC"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/lay_action"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_editchat"
            android:layout_marginLeft="10dp"
            >
            <EditText
                android:id="@+id/edit_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_attachment"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:minHeight="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:hint="Type a message"
                android:padding="12dp"
                android:textSize="13sp"
                android:textColor="@color/black"/>
            <ImageView
                android:visibility="visible"
                android:id="@+id/img_attachment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="7dp"
                android:src="@drawable/attachment"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lay_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/lay_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/circle_back">
            <ImageView
                android:id="@+id/img_send"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/send"
                android:padding="7dp"
                android:layout_centerInParent="true"
                app:tint="@color/white"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lay_mic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/circle_back">

                <ImageView
                    android:id="@+id/img_mic"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerInParent="true"
                    android:padding="7dp"
                    android:src="@drawable/mic"
                    app:tint="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>